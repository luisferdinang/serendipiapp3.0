# Firebase Configuration
VITE_FIREBASE_API_KEY=your_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# API Keys
VITE_GEMINI_API_KEY=your_gemini_api_key

# App Configuration
VITE_APP_NAME=Serendipia
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API Base URL
VITE_API_BASE_URL=http://localhost:3000/api

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true

# Internationalization
VITE_DEFAULT_LANGUAGE=es
VITE_SUPPORTED_LANGUAGES=es,en

# Theme
VITE_DEFAULT_THEME=system

# Pagination
VITE_ITEMS_PER_PAGE=10

# Date & Time
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm
VITE_DATE_TIME_FORMAT=DD/MM/YYYY HH:mm

# Currency
VITE_DEFAULT_CURRENCY=BS
VITE_CURRENCY_SYMBOL=Bs.
VITE_CURRENCY_DECIMALS=2

# Exchange Rate
VITE_DEFAULT_EXCHANGE_RATE=36.5

# Storage Keys
VITE_AUTH_TOKEN_KEY=auth_token
VITE_USER_DATA_KEY=user_data
VITE_THEME_KEY=theme_preference
VITE_LANGUAGE_KEY=language_preference
